<div class="bg-red-600/[.90] w-full py-4 text-center fixed top-0 left-0 z-10">
  <%= image_tag 'marvel_logo.png', alt: 'Marvel Logo', class: 'inline-block' %>
  <%= render 'search' %>
</div>

<div class="mx-auto pt-40 px-6 pb-6 min-h-screen">
  <div class="grid grid-cols-5 gap-4"  data-controller="comics">
    <%= render @comics %>
  </div>

  <div class="flex w-full justify-between mt-6">
    <% if @prev_page %>
      <%= link_to 'PREVIOUS PAGE ', comics_path(page: @prev_page), class: "bg-white text-red-500 font-bold px-4 py-2" %>
    <% else %>
      <span></span>
    <% end %>

    <%= link_to 'NEXT PAGE', comics_path(page: @next_page), class: "bg-white text-red-500 font-bold px-4 py-2" %>
  </div>
</div>